#!/usr/bin/env sh

/usr/local/bin/limelight -m config border_width            5
/usr/local/bin/limelight -m config border_radius           5
/usr/local/bin/limelight -m config border_placement        inset
/usr/local/bin/limelight -m config active_border_color     0xffB2BE5A
/usr/local/bin/limelight -m config normal_border_color     0xff555555
/usr/local/bin/limelight -m config normal_fill_color       0x20111111

echo "limelight configuration loaded.."

