[credential]
	helper = store
[user]
	name = lkearn
	email = liam@sproutlabs.com.au
[includeIf "gitdir:/Users/"]
	path = ~/.gitconfig.darwin.inc
[includeIf "gitdir:/home/"]
	path = ~/.gitconfig.linux.inc
[alias]
	update = add -u
[add.interactive]
	useBuiltin = false
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[commit]
	gpgsign = true
	verbose = true
[diff "ansible-vault"]
	textconv = ansible-vault view
[core]
	excludesFile = ~/.gitignore
